{
  "name": "@pepr/capabilities",
  "license": "Apache-2.0",
  "repository": "defenseunicorns/pepr-capabilities",
  "engines": {
    "node": ">=18.0.0"
  },
  "version": "0.0.0-development",
  "description": "Collection of different capabilities you can import into your Pepr Module.",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "pepr": {
    "name": "Pepr Capabilities",
    "uuid": "e4a35052-c138-55e4-94a7-bb942b1cddc7",
    "onError": "ignore",
    "alwaysIgnore": {
      "namespaces": [],
      "labels": []
    }
  },
  "scripts": {
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0'",
    "start": "pepr dev",
    "test": "ava",
    "format:check": "eslint capabilities && prettier capabilities --check",
    "format:fix": "eslint capabilities --fix && prettier capabilities --write"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "21.1.1",
    "pepr": "0.2.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "ava": "5.2.0",
    "eslint": "8.39.0",
    "nock": "13.3.1",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failFast": true,
    "verbose": true
  }
}
