{
  "name": "@pepr/capabilities",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "pepr": {
    "name": "Pepr Capabilities",
    "uuid": "e4a35052-c138-55e4-94a7-bb942b1cddc7",
    "onError": "ignore",
    "alwaysIgnore": {
      "namespaces": [],
      "labels": []
    }
  },
  "scripts": {
    "build": "rm -fr dist && pepr build -e index.ts",
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0' -p '443:443@loadbalancer' -p '80:80@loadbalancer' --k3s-arg='--disable=traefik@server:0'",
    "start": "pepr dev",
    "test": "ava"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "21.1.1",
    "pepr": "0.5.0"
  },
  "devDependencies": {
    "ava": "5.3.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failFast": true,
    "verbose": true
  }
}
