{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "capabilities",
    "target": "ES2022"
  },
  "include": ["capabilities/**/*.ts"],
  "exclude": ["node_modules", "dist", "hello-pepr.ts", "pepr.ts"]
}
